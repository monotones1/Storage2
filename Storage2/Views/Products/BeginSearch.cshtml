@model Storage2.Models.Product

@{
    ViewData["Title"] = "Begin Search";
}

<h1>Search</h1>

<h4>tip: try "Serietidning"</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ReturnFromOneCategory">
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Search Category" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Search">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Search name!" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
